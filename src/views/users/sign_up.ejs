<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>

    
    <% include ../static/partials/navbar.ejs %>


      <main class="container">
        <% include ../static/partials/messages.ejs %>

   <h1>Welcome to Blocipedia</h1>
   <h2>Sign up</h2>
   <div class="row">
     <div class="col-md-8">
       <form method="POST" action="/user/signup">
         <div class="form-group">
           <label>Username:</label>
           <input type="text" name="username" placeholder="Enter Name" class="form-control"/>
           <small class="text-muted" id="titleHelp">username must be 6 or more characters in length.</small>
         </div>
         <div class="form-group">
           <label>Email:</label>
           <input type="email" name="email" placeholder="Enter Email" class="form-control"/>
         </div>
         <div class="form-group">
           <label>Password:</label>
           <input type="password" name="password" placeholder="Enter Password" class="form-control"/>
           <small class="text-muted" id="bodyHelp">password must be 6 or more characters in length.</small>
         </div>
         <div class="form-group">
           <label>Password:</label>
           <input type="password" name="passwordConfirmation" placeholder="Enter Password confirmation" class="form-control"/>
         </div><br/>
         <input type="submit" value="Sign Up" class="btn btn-primary"/>
       </form>
     </div>
   </div>
        

      </main>
      

    <% include ../static/partials/baseScript.ejs %>
    </body>
</html>